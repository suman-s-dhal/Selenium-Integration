public class Profile extends TestBase {
	

	@FindBy(xpath = "//*[@id=\"right-click-menu\"]/div[1]/div/div[2]")
	public static WebElement clickprofile;
	
	@FindBy(xpath = "//a[@class='profile-link']")
	public static WebElement clickmanageprofile;
	
	@FindBy(xpath ="//div[@class='ProfileHover']//i[@class='anticon anticon-edit']//*[local-name()='svg']//*[name()='path' and contains(@d,'M257.7 752')]")
    public static WebElement changeprofile;
	
	@FindBy(xpath = "//div[@id='firstName']//i[@class='anticon anticon-edit edit-icon']//*[local-name()='svg']")
	public static WebElement firstnameedit;
	
	@FindBy(xpath ="//input[@id='firstName']")
	public static WebElement firstname;
	
	@FindBy(xpath ="//i[@class='anticon anticon-check']")
	public static WebElement firstnameok;
	
	
	@FindBy(xpath = "//div[@id='lastName']//i[@class='anticon anticon-edit edit-icon']//*[local-name()='svg']")
	public static WebElement lastnameedit;
	
	@FindBy(xpath ="//input[@id='lastName']")
	public static WebElement lastname;
	
	@FindBy(xpath ="//i[@class='anticon anticon-check']")
	public static WebElement lastnameok;
	
	@FindBy(xpath = "//div[@id='phone']//i[@class='anticon anticon-edit edit-icon']//*[local-name()='svg']")
	public static WebElement phonenumberedit;
	
	@FindBy(xpath = "//input[@id='phone']")
	public static WebElement phonenumber;
	
	@FindBy(xpath ="//i[@class='anticon anticon-check']")
	public static WebElement phonenumberok;
	
	/*indBy(xpath ="//span[@id='email']")
	public boolean WebElement email;
	
	@FindBy(xpath ="//span[@id='organization']")
	public boolean WebElement workspace;*/
	
	@FindBy(xpath = "//button[@class='ant-btn ant-btn-primary']")	
	public static WebElement update;
	
	@FindBy(xpath = "//div[contains(@class,'ant-tabs-tab-active ant-tabs-tab')]")
	public static WebElement skilltab;
	
	@FindBy(xpath ="//*[name()='path' and contains(@d,'M696 480H5')]")
	public static WebElement addskills;

	@FindBy(xpath ="//input[@id='add_skill_modal_skill']")
	public static WebElement enterskillname;

	@FindBy(xpath ="//input[@id='add_skill_modal_rating']")
