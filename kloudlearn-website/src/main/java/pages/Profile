	private  static WebDriverWait wait =new WebDriverWait(browser, 30);

    public Profile(){
        PageFactory.initElements(browser, this);
    }

	
	public static void editprofile() throws InterruptedException, NoAlertPresentException{	
		//clicking profile 
		clickprofile.click();
		clickmanageprofile.click(); 
		firstnameedit.click();
		firstname.sendKeys(Keys.chord(Keys.CONTROL,"a"));
 		firstname.sendKeys("Analytics");
		firstnameok.click();
		lastnameedit.click();
		Thread.sleep(1000);
		lastname.clear();
		lastname.sendKeys("Testing");
		lastnameok.click();
		phonenumberedit.click();
		phonenumber.clear();
		phonenumber.sendKeys("09374837238");
		phonenumberok.click();
		update.click();
		//browser.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
	}
	
	public static void updateprofie() throws InterruptedException{
		skilltab.click();
		addskills.click();
		enterskillname.click();
		enterskillname.clear();
		enterskillname.sendKeys("cloudarchitect");
		skillrating.click();
		skillrating.sendKeys("10");
		saveskill.click();
		badgetab.click();
		Thread.sleep(3000);
		certificatetab.click();
		Thread.sleep(3000);
		certificateview.click();
		downcertificate.click();
		closeceritifcate.click();		
	}

